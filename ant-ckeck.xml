<project name="zimbramock-ant-checks">
    <description>
        Ant Checks for ZimbraMock project.
    </description>

    <macrodef name="check-zimbraMock">
        <sequential>
            <echo>Checking missing ZimbraMock Files...</echo>
            <exec executable="./compareZimbraTS"
                  dir="./src/zimbra/"
                  failonerror="true">
            </exec>
            <echo>Checking exports in ZimbraMock Files...</echo>
            <exec executable="./checkExports"
                  dir="./src/zimbra/"
                  failonerror="true">
            </exec>
        </sequential>
    </macrodef>
</project>
